<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.TimeToTrip" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialCardViewStyle">@style/Widget.AppTheme.FlightCardView</item>
    </style>

    <style name="Theme.TimeToTrip.AppBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:background">@color/ripple_color</item>
        <item name="tint">@color/black</item>
    </style>

    <style name="Widget.AppTheme.FlightCardView" parent="Widget.Material3.CardView.Outlined">
        <item name="strokeColor">@color/card_frame</item>
    </style>

</resources>