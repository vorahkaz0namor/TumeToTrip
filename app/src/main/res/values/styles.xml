<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <style name="Widget.AppTheme.FlightDurationView" parent="Widget.AppCompat.TextView">
        <item name="android:layout_gravity">center</item>
        <item name="drawableStartCompat">@drawable/ic_duration_16</item>
        <item name="drawableEndCompat">@drawable/ic_duration_16</item>
        <item name="drawableTint">?attr/colorControlNormal</item>
        <item name="android:textSize">@dimen/duration_text_size</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="Widget.AppTheme.PriceView" parent="Widget.AppCompat.TextView">
        <item name="drawableEndCompat">@drawable/ic_currency_ruble_24</item>
        <item name="drawableTint">?attr/colorControlNormal</item>
        <item name="android:textSize">@dimen/time_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingStart">@dimen/price_indent</item>
        <item name="android:paddingEnd">@dimen/price_indent</item>
    </style>

    <style name="Widget.AppTheme.HorizontalDivider" parent="Widget.Material3.MaterialDivider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider_width</item>
        <item name="android:layout_marginTop">@dimen/divider_margin</item>
        <item name="android:layout_marginBottom">@dimen/divider_margin</item>
        <item name="dividerColor">@color/card_frame</item>
    </style>

    <style name="Widget.AppTheme.LikeButton" parent="Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="android:layout_width">@dimen/like_icon_size</item>
        <item name="android:layout_height">@dimen/like_icon_size</item>
        <item name="rippleColor">@color/ripple_color</item>
        <item name="iconGravity">end</item>
        <item name="android:backgroundTint">@color/custom_transparent</item>
        <item name="iconTint">@color/color_like_button</item>
        <item name="android:checkable">true</item>
        <item name="icon">@drawable/like_selector</item>
        <item name="contentDescription">@string/favorite_flight</item>
    </style>

</resources>